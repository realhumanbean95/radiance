// For format details, see https://aka.ms/vscode-remote/devcontainer.json or
// https://github.com/microsoft/vscode-dev-containers/tree/master/containers/docker-existing-dockerfile
{
	"name": "Existing Dockerfile",
	// Sets the run context to one level up instead of the .devcontainer folder.
	"context": "..",
	// Update the 'dockerFile' property if you aren't using the standard 'Dockerfile' filename.
	"dockerFile": "Dockerfile",
	"overrideCommand": false,
	// Add the IDs of extensions you want installed when the container is created.
	"extensions": [
		"ms-vscode.cpptools",
		"austin.code-gnu-global",
		"stackbuild.bazel-stack-vscode",
		"ms-azuretools.vscode-docker",
		"jebbs.plantuml",
		"fabiospampinato.vscode-terminals",
		"ms-python.python",
		"graphql.vscode-graphql"
	],
	"remoteEnv": {
		"LOCAL_WORKSPACE_FOLDER": "${localWorkspaceFolder}"
	},
	// Set *default* container specific settings.json values on container create.
	"settings": {},
	// Use 'forwardPorts' to make a list of ports inside the container available locally.
	// "forwardPorts": [],
	// Uncomment when using a ptrace-based debugger like C++, Go, and Rust
	// --network=host lets the container access the host's network. I am using this for postgres access.
	"runArgs": [
		"--init",
		"--runtime=nvidia",
		"--gpus",
		"all",
		"--env=DISPLAY",
     	"--volume=/tmp/.X11-unix:/tmp/.X11-unix:rw",
		"--network=host",
		"--cap-add=SYS_PTRACE",
		"--security-opt",
		"seccomp=unconfined",
	],
	// Uncomment to use the Docker CLI from inside the container. See https://aka.ms/vscode-remote/samples/docker-from-docker.
	"mounts": [
		"source=/var/run/docker.sock,target=/var/run/docker.sock,type=bind"
	],
	// If you're using a local container, it can be handy to map a local directory into your container filesystem.
	//"mounts": [ "source=/Users/host-system-username/builder-cache/,target=/home/builder/.cache/,type=bind" ],
	// Mount your workspace into a Docker volume (this works with local and remote containers)
	//"workspaceFolder": "/home/builder/", // Create a subdirectory under here via Terminal and adjust the path if desired
	//"workspaceMount": "source=your-username-remote-workspace,target=/home/builder,type=volume",
	// Use 'postCreateCommand' to run commands after the container is created.
	// "postCreateCommand": "docker --version",
	// Uncomment to connect as a non-root user if you've added one. See https://aka.ms/vscode-remote/containers/non-root.
	"remoteUser": "vscode",
}